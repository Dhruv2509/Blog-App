<%- include('partials/header') -%>

<div class="ui main text container segment">
    <div class="ui top attachedt">
        <div class="ui huge header Binod"><%= blog.title %></div>
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
            <div class="content Binod">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description Binod">
                <p><%- blog.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit Blog</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"> 
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>